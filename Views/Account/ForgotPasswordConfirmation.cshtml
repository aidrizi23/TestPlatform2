@{
    ViewData["Title"] = "Password Reset Sent";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="mb-0"><i class="fas fa-envelope-circle-check me-2"></i>Check Your Email</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-times-circle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <!-- Email Icon -->
                    <div class="mb-4">
                        <i class="fas fa-key fa-5x text-danger"></i>
                    </div>

                    <!-- Main Message -->
                    <h4 class="mb-3">Password Reset Instructions Sent</h4>
                    <p class="text-muted mb-4">
                        If an account with that email address exists, we've sent password reset instructions to your inbox.
                    </p>

                    <!-- Instructions -->
                    <div class="bg-light p-3 rounded mb-4">
                        <h6 class="mb-2"><i class="fas fa-info-circle me-2"></i>Next Steps:</h6>
                        <ol class="text-start mb-0">
                            <li>Check your email inbox (and spam folder)</li>
                            <li>Click the "Reset Password" link in the email</li>
                            <li>Create a new, secure password</li>
                            <li>Return here to log in with your new password</li>
                        </ol>
                    </div>

                    <!-- Security Notice -->
                    <div class="alert alert-warning">
                        <h6 class="mb-2"><i class="fas fa-shield-alt me-2"></i>Security Notice</h6>
                        <small class="mb-0">
                            The password reset link will expire in 1 hour for security reasons. 
                            If you don't receive the email, you can request another reset.
                        </small>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                        </a>
                        <a asp-action="ForgotPassword" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>Send Another Reset
                        </a>
                    </div>

                    <!-- Help Text -->
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="fas fa-question-circle me-1"></i>
                            Didn't receive the email? Check your spam folder or 
                            <a asp-action="ForgotPassword" class="text-decoration-none">request another reset</a>.
                        </small>
                    </div>
                </div>
                <div class="card-footer text-center py-3">
                    <small class="text-muted">
                        Having trouble? <a href="mailto:support@testplatform.com" class="text-decoration-none">Contact Support</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation to the key icon
            const keyIcon = document.querySelector('.fa-key');
            if (keyIcon) {
                keyIcon.style.animation = 'bounce 2s infinite';
            }
        });
    </script>
    
    <style>
        @@keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
        }
        
        .card-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            border-bottom: none;
        }
    </style>
}