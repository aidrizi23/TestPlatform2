        justify-content: center;
    }

    .access-description {
        font-size: 1.125rem;
        color: #6b7280;
        margin-bottom: 2rem;
    }

    .alert {
        border-radius: 8px;
        border: none;
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .alert-danger {
        background-color: rgba(220, 38, 38, 0.1);
