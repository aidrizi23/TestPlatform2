    .hero-section {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
    }

    .hero-stats {
        justify-content: center;
        flex-wrap: wrap;
    }

    .features-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .steps-container {
        flex-direction: column;
        gap: 3rem;
    }

    .step-connector {
        transform: rotate(90deg);
        width: 2px;
        height: 60px;
    }

    .step-connector::after {
        right: -3px;
        top: -4px;
    }
