    }

    /* Input Group Styling */
    .input-group {
        position: relative;
    }

    .input-group-text {
        background: #f8fafc;
        border: 2px solid #e5e7eb;
        border-right: none;
        border-radius: 12px 0 0 12px;
        color: #6b7280;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.875rem 1rem;
    }

    .input-group .form-control {
