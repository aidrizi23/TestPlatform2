        text-decoration: none;
        display: flex;
        align-items: center;
        transition: color 0.2s ease;
        font-weight: 500;
    }

    .breadcrumb-link:hover {
        color: #1d4ed8;
        text-decoration: none;
    }

    .breadcrumb-separator {
        margin: 0 0.75rem;
        color: #9ca3af;
    }

    .breadcrumb-current {
        color: #6b7280;
        font-weight: 500;
    }

    /* Page Header */
