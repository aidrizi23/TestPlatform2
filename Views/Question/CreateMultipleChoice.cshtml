        margin-bottom: 1rem;
    }

    .toggle-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .toggle-info {
        flex: 1;
    }

    .toggle-title {
        font-weight: 600;
        color: #1e40af;
        margin-bottom: 0.25rem;
    }

    .toggle-description {
        font-size: 0.875rem;
        color: #3730a3;
        margin: 0;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 2px solid #f3f4f6;
