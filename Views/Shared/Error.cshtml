@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card error-card">
                <div class="card-body text-center p-5">
                    <!-- Error Icon -->
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-circle fa-5x text-danger"></i>
                    </div>
                    
                    <!-- Error Title -->
                    <h1 class="display-4 mb-3">Oops!</h1>
                    <h2 class="mb-4">Something went wrong</h2>
                    
                    <!-- Error Message -->
                    <p class="lead mb-4">
                        We're sorry, but an unexpected error occurred while processing your request.
                        Our team has been notified and is working to resolve the issue.
                    </p>
                    
                    <!-- Request ID if available -->
                    @if (Model.ShowRequestId)
                    {
                        <div class="request-id-container mb-4">
                            <p class="text-muted mb-1">Error Reference:</p>
                            <code class="request-id">@Model.RequestId</code>
                        </div>
                    }
                    
                    <!-- Action Buttons -->
                    <div class="action-buttons mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Troubleshooting Tips -->
            <div class="troubleshooting-tips mt-4">
                <h5 class="mb-3"><i class="fas fa-tools me-2"></i>Troubleshooting Tips</h5>
                <ul>
                    <li>Refresh the page and try again</li>
                    <li>Check your internet connection</li>
                    <li>Clear your browser cache and cookies</li>
                    <li>Try using a different browser</li>
                    <li>If the problem persists, please contact support</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate the error icon
            const errorIcon = document.querySelector('.error-icon');
            
            if (errorIcon) {
                errorIcon.style.opacity = '0';
                errorIcon.style.transform = 'scale(0.5)';
                errorIcon.style.transition = 'all 0.5s ease';
                
                setTimeout(() => {
                    errorIcon.style.opacity = '1';
                    errorIcon.style.transform = 'scale(1)';
                }, 100);
            }
        });
    </script>
}