<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniTest</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    @* <!-- Top Information Bar -->  *@
    @* <div class="top-bar animate-pulse"> *@
    @*     <div class="container d-flex justify-content-between align-items-center"> *@
    @*         <div class="d-flex align-items-center"> *@
    @*             <i class="fas fa-graduation-cap me-2 animate-bounce"></i> *@
    @*             <span class="fw-bold">UniTest Platform</span> *@
    @*         </div> *@
    @*         <div class="d-flex align-items-center"> *@
    @*             <i class="fas fa-clock me-2"></i> *@
    @*             <span id="current-date">@DateTime.Now.ToString("MMMM d, yyyy")</span> *@
    @*         </div> *@
    @*     </div> *@
    @* </div> *@

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                
                <a class="navbar-brand shine-effect" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap me-2"></i>UniTest
                </a>

                <a class="navbar-brand-secondary" asp-area="" asp-controller="Test" asp-action="Index">
                    <i class="fas fa-clipboard-list me-1"></i>Tests
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Test" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Test" asp-action="Index">
                                <i class="as fa-clipboard-list me-1"></i>Test
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Privacy" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-lock me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>

            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-5 pt-5">
        <main role="main" class="pb-3 glass-effect rounded animate-fadeIn">
            <!-- This wrapper ensures proper padding while allowing sections to have their own styling -->
            <div class="content-wrapper p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-gradient mb-3">UniTest</h5>
                    <p class="text-secondary">A professional testing platform designed to help students excel in their academic journey.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="footer-links">
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Home</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Tests</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Privacy</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Contact Us</h5>
                    <ul class="footer-contact">
                        <li><i class="fas fa-map-marker-alt me-2"></i>123 Education St, Learning City</li>
                        <li><i class="fas fa-phone me-2"></i>(123) 456-7890</li>
                        <li><i class="fas fa-envelope me-2"></i>info@unitest.edu</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p class="mb-0">&copy; @DateTime.Now.Year UniTest. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Add JavaScript for animations and effects -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
            
            // Add page transition class to main content
            const mainContent = document.querySelector('main');
            mainContent.classList.add('page-transition');
            
            // Add section class to proper elements for section differentiation
            document.querySelectorAll('.card, .table-responsive, .content-block').forEach((element, index) => {
                element.classList.add('section');
                // Add staggered animation delay
                element.style.animationDelay = (index * 0.1) + 's';
            });
            
            // Add animation to form fields
            document.querySelectorAll('.form-control, .input-group').forEach((element, index) => {
                element.classList.add('form-animate');
                element.style.animationDelay = (index * 0.05) + 's';
            });
            
            // Update current date with formatted date
            const dateElement = document.getElementById('current-date');
            if (dateElement) {
                const now = new Date();
                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                dateElement.textContent = now.toLocaleDateString('en-US', options);
            }
        });
    </script>
</body>
</html>