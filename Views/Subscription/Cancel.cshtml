@{
ViewData["Title"] = "Subscription Cancelled";
}

<div class="cancel-container">
    <div class="cancel-content">
        <!-- Cancel Icon -->
        <div class="cancel-animation">
            <div class="cancel-icon">
                <i class="fas fa-times-circle"></i>
            </div>
        </div>

        <!-- Cancel Message -->
        <div class="cancel-message">
            <h1 class="cancel-title">Subscription Cancelled</h1>
            <p class="cancel-subtitle">
                No worries! You can still enjoy TestPlatform with our free plan or upgrade anytime.
            </p>
        </div>

        <!-- What You Still Get -->
        <div class="free-features">
            <h2 class="features-title">What You Still Get for Free:</h2>
            <div class="features-list">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="feature-content">
                        <h4>30 Questions</h4>
                        <p>Create up to 30 test questions (lifetime limit)</p>
                    </div>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="feature-content">
                        <h4>10 Weekly Invites</h4>
                        <p>Send up to 10 test invitations every week</p>
                    </div>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="feature-content">
                        <h4>Basic Analytics</h4>
                        <p>View essential test results and student performance</p>
                    </div>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="feature-content">
                        <h4>Secure Testing</h4>
                        <p>All tests include security features and proctoring</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feedback Section -->
        <div class="feedback-section">
            <div class="feedback-card">
                <h3 class="feedback-title">Help Us Improve</h3>
                <p class="feedback-description">
                    We'd love to know why you decided not to upgrade. Your feedback helps us make TestPlatform better.
                </p>

                <div class="feedback-options">
                    <button class="feedback-btn" onclick="selectFeedback(event, 'price')">
                        <i class="fas fa-dollar-sign"></i>
                        Price too high
                    </button>
                    <button class="feedback-btn" onclick="selectFeedback(event, 'features')">
                        <i class="fas fa-puzzle-piece"></i>
                        Missing features
                    </button>
                    <button class="feedback-btn" onclick="selectFeedback(event, 'complexity')">
                        <i class="fas fa-cogs"></i>
                        Too complex
                    </button>
                    <button class="feedback-btn" onclick="selectFeedback(event, 'timing')">
                        <i class="fas fa-clock"></i>
                        Not ready yet
                    </button>
                    <button class="feedback-btn" onclick="selectFeedback(event, 'other')">
                        <i class="fas fa-question"></i>
                        Other reason
                    </button>
                </div>

                <div class="feedback-thanks" id="feedbackThanks" style="display: none;">
                    <i class="fas fa-heart text-danger"></i>
                    <p>Thank you for your feedback! We'll use it to improve TestPlatform.</p>
                </div>
            </div>
        </div>

        <!-- Special Offer -->
        <div class="special-offer">
            <div class="offer-card">
                <div class="offer-badge">
                    <i class="fas fa-percentage"></i>
                    Limited Time
                </div>
                <h3 class="offer-title">Wait! Here's a Special Offer</h3>
                <p class="offer-description">
                    Since you were interested in upgrading, we'd like to offer you a 30% discount on your first month.
                </p>

                <div class="offer-pricing">
                    <div class="price-comparison">
                        <span class="old-price">$5.00</span>
                        <span class="new-price">$3.50</span>
                        <span class="discount-badge">30% OFF</span>
                    </div>
                    <p class="price-note">First month only, then $5/month. Cancel anytime.</p>
                </div>

                <form asp-action="CreateCheckoutSession" method="post" class="offer-form">
                    <input type="hidden" name="discount" value="30" />
                    <button type="submit" class="btn btn-success btn-lg offer-btn">
                        <i class="fas fa-gift me-2"></i>
                        Claim 30% Discount
                    </button>
                </form>

                <p class="offer-expires">This offer expires in 24 hours</p>
            </div>
        </div>

        <!-- Alternative Actions -->
        <div class="alternative-actions">
            <h3 class="actions-title">What Would You Like to Do Next?</h3>
            <div class="actions-grid">
                <a asp-controller="Test" asp-action="Create" class="action-card">
                    <div class="action-icon create">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div class="action-content">
                        <h4>Create a Test</h4>
                        <p>Start building your first test with our free plan</p>
                    </div>
                </a>

                <a asp-controller="Test" asp-action="Index" class="action-card">
                    <div class="action-icon manage">
                        <i class="fas fa-list-ul"></i>
                    </div>
                    <div class="action-content">
                        <h4>View My Tests</h4>
                        <p>Manage your existing tests and view results</p>
                    </div>
                </a> <!-- Fixed: Changed </div> to </a> -->

