                    <div class="action-icon upgrade">
                        <i class="fas fa-crown"></i>
                    </div>
                    <div class="action-content">
                        <h4>Upgrade Later</h4>
                        <p>Review Pro benefits and upgrade when ready</p>
                    </div>
                </a>

                <a asp-controller="Home" asp-action="Index" class="action-card">
                    <div class="action-icon home">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="action-content">
                        <h4>Go to Dashboard</h4>
                        <p>Return to your main dashboard</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Newsletter Signup -->
        <div class="newsletter-section">
            <div class="newsletter-card">
                <h4 class="newsletter-title">Stay Updated</h4>
                <p class="newsletter-description">
                    Get notified about new features, updates, and special offers.
                </p>
                <div class="newsletter-form">
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Enter your email" />
                        <button type="button" class="btn btn-primary" onclick="subscribeNewsletter(event)">
                            <i class="fas fa-paper-plane"></i>
                        </button>
