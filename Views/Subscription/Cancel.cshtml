@section Scripts {
<script>
    // Feedback selection
    function selectFeedback(event, reason) { // Fixed: Added event parameter
        // Remove selected class from all buttons
        document.querySelectorAll('.feedback-btn').forEach(btn => {
            btn.classList.remove('selected');
        });

        // Add selected class to clicked button
        event.target.closest('.feedback-btn').classList.add('selected');

        // Show thank you message
        setTimeout(() => {
            document.getElementById('feedbackThanks').style.display = 'flex';

            // Hide feedback options
            document.querySelector('.feedback-options').style.display = 'none';
        }, 500);

        // Send feedback to server (optional)
        fetch('/api/feedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                type: 'subscription_cancel',
                reason: reason,
                timestamp: new Date().toISOString()
            })
        }).catch(error => {
            console.log('Feedback tracking error:', error);
        });
    }

    // Newsletter subscription
    function subscribeNewsletter(event) { // Fixed: Added event parameter
        const emailInput = document.querySelector('.newsletter-form input[type="email"]');
        const email = emailInput.value.trim();

        if (!email) {
            alert('Please enter your email address');
            return;
        }

        if (!isValidEmail(email)) {
            alert('Please enter a valid email address');
            return;
        }

        // Disable button and show loading
        const button = event.target;
        const originalText = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

        // Simulate newsletter subscription
        setTimeout(() => {
            button.innerHTML = '<i class="fas fa-check"></i>';
            button.classList.remove('btn-primary');
            button.classList.add('btn-success');
            emailInput.value = '';
            emailInput.placeholder = 'Thank you for subscribing!';

            setTimeout(() => {
                button.innerHTML = originalText;
                button.disabled = false;
                button.classList.remove('btn-success');
                button.classList.add('btn-primary');
                emailInput.placeholder = 'Enter your email';
            }, 3000);
        }, 1000);
    }

    // Email validation
    function isValidEmail(email) {
        return /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email);
    }

    // Co   untdown timer for offer expiration
    function startCountdown() {
        const expiryTime = new Date();
        expiryTime.setHours(expiryTime.getHours() + 24);

        function updateCountdown() {
            const now = new Date();
            const timeLeft = expiryTime - now;

            if (timeLeft <= 0) {
                document.querySelector('.offer-expires').textContent = 'This offer has expired';
                document.querySelector('.offer-btn').disabled = true;
                return;
            }

            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));

            document.querySelector('.offer-expires').textContent =
                `This offer expires in ${hours}h ${minutes}m`;
        }

        updateCountdown();
        setInterval(updateCountdown, 60000); // Update every minute
    }

    document.addEventListener('DOMContentLoaded', function() {
        startCountdown();

        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.querySelectorAll('.free-features, .feedback-section, .special-offer, .alternative-actions').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });
    });
</script>
