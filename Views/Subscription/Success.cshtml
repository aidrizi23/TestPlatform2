@{
    ViewData["Title"] = "Welcome to Pro!";
}

<div class="success-container">
    <div class="success-content">
        <!-- Success Animation -->
        <div class="success-animation">
            <div class="success-checkmark">
                <div class="check-icon">
                    <span class="icon-line line-tip"></span>
                    <span class="icon-line line-long"></span>
                    <div class="icon-circle"></div>
                    <div class="icon-fix"></div>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        <div class="success-message">
            <h1 class="success-title">
                <i class="fas fa-crown me-2"></i>
                Welcome to TestPlatform Pro!
            </h1>
            <p class="success-subtitle">
                Your subscription is now active and you have unlimited access to all premium features.
            </p>
        </div>

        <!-- Pro Features Showcase -->
        <div class="features-showcase">
            <h2 class="showcase-title">What You've Unlocked:</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon unlimited">
                        <i class="fas fa-infinity"></i>
                    </div>
                    <h3 class="feature-title">Unlimited Questions</h3>
                    <p class="feature-description">Create as many test questions as you need without any restrictions.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon invites">
                        <i class="fas fa-paper-plane"></i>
                    </div>
                    <h3 class="feature-title">Unlimited Invites</h3>
                    <p class="feature-description">Send test invitations to unlimited students every week.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon analytics">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="feature-title">Advanced Analytics</h3>
                    <p class="feature-description">Get detailed insights into student performance and test effectiveness.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon support">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3 class="feature-title">Priority Support</h3>
                    <p class="feature-description">Get faster responses and priority assistance from our support team.</p>
                </div>
            </div>
        </div>

        <!-- Next Steps -->
        <div class="next-steps">
            <h2 class="steps-title">Ready to Get Started?</h2>
            <div class="steps-grid">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4>Create Your First Test</h4>
                        <p>Build comprehensive tests with unlimited questions</p>
                        <a asp-controller="Test" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Create Test
                        </a>
                    </div>
                </div>
                
                <div class="step-card">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4>Invite Students</h4>
                        <p>Send unlimited invitations to your students</p>
                        <a asp-controller="Test" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-users me-2"></i>Manage Tests
                        </a>
                    </div>
                </div>
                
                <div class="step-card">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4>View Analytics</h4>
                        <p>Track performance with advanced insights</p>
                        <a asp-controller="Subscription" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-chart-bar me-2"></i>View Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Subscription Details -->
        <div class="subscription-details">
            <div class="details-card">
                <h3 class="details-title">Subscription Details</h3>
                <div class="details-content">
                    <div class="detail-row">
                        <span class="detail-label">Plan:</span>
                        <span class="detail-value">TestPlatform Pro</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Billing:</span>
                        <span class="detail-value">$5.00 / month</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Next Billing:</span>
                        <span class="detail-value">@DateTime.Now.AddMonths(1).ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <span class="detail-value status-active">
                            <i class="fas fa-check-circle me-1"></i>Active
                        </span>
                    </div>
                </div>
                
                <div class="billing-info">
                    <p class="billing-note">
                        <i class="fas fa-info-circle me-2"></i>
                        You can manage your subscription, update payment methods, or cancel anytime from your dashboard.
                    </p>
                    <a asp-controller="Subscription" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-cog me-2"></i>Manage Subscription
                    </a>
                </div>
            </div>
        </div>

        <!-- Email Confirmation -->
        <div class="email-confirmation">
            <div class="confirmation-card">
                <i class="fas fa-envelope-circle-check"></i>
                <h4>Confirmation Email Sent</h4>
                <p>We've sent a confirmation email with your receipt and subscription details. Check your inbox!</p>
            </div>
        </div>
    </div>
</div>

<style>
/* Success Page Styles */
.success-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.success-content {
    max-width: 1000px;
    width: 100%;
    text-align: center;
}

/* Success Animation */
.success-animation {
    margin-bottom: 3rem;
}

.success-checkmark {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    display: inline-block;
    stroke-width: 3;
    stroke: #16a34a;
    stroke-miterlimit: 10;
    margin: 0 auto;
    position: relative;
    animation: checkmark-fill 0.4s ease-in-out 0.4s forwards, checkmark-scale 0.3s ease-in-out 0.9s both;
}

.success-checkmark .check-icon {
    width: 120px;
    height: 120px;
    position: relative;
    border-radius: 50%;
    box-sizing: border-box;
    border: 4px solid #16a34a;
    background: white;
}

.check-icon::before {
    top: 3px;
    left: -2px;
    width: 30px;
    transform-origin: 100% 50%;
    border-radius: 100px 0 0 100px;
}

.check-icon::after {
    top: 0;
    left: 30px;
    width: 60px;
    transform-origin: 0 50%;
    border-radius: 0 100px 100px 0;
    animation: checkmark-rotate 4.25s ease-in;
}

.check-icon::before,
.check-icon::after {
    content: '';
    height: 100px;
    position: absolute;
    background: white;
    transform: rotate(-45deg);
}

.icon-line {
    height: 4px;
    background: #16a34a;
    display: block;
    border-radius: 2px;
    position: absolute;
    z-index: 10;
}

.icon-line.line-tip {
    top: 56px;
    left: 20px;
    width: 30px;
    transform: rotate(45deg);
    animation: checkmark-icon-tip 0.75s cubic-bezier(0.23, 1, 0.32, 1) forwards;
}

.icon-line.line-long {
    top: 50px;
    right: 15px;
    width: 50px;
    transform: rotate(-45deg);
    animation: checkmark-icon-long 0.75s cubic-bezier(0.23, 1, 0.32, 1) 0.15s forwards;
}

.icon-circle {
    top: -4px;
    left: -4px;
    z-index: 10;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    position: absolute;
    box-sizing: content-box;
    border: 4px solid #16a34a;
}

.icon-fix {
    top: 10px;
    width: 7px;
    height: 90px;
    position: absolute;
    left: 28px;
    z-index: 1;
    border-radius: 0 0 0 5px;
    transform: rotate(-45deg);
    background: white;
}

/* Success Message */
.success-message {
    margin-bottom: 4rem;
    color: white;
}

.success-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.success-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Features Showcase */
.features-showcase {
    background: white;
    border-radius: 20px;
    padding: 3rem 2rem;
    margin-bottom: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.showcase-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2rem;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.feature-card {
    text-align: center;
    padding: 1.5rem;
    border-radius: 16px;
    background: #f9fafb;
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.feature-icon {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    margin: 0 auto 1rem;
}

.feature-icon.unlimited {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.feature-icon.invites {
    background: linear-gradient(135deg, #10b981, #059669);
}

.feature-icon.analytics {
    background: linear-gradient(135deg, #f59e0b, #d97706);
}

.feature-icon.support {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
}

.feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
}

.feature-description {
    color: #6b7280;
    line-height: 1.5;
    margin: 0;
}

/* Next Steps */
.next-steps {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 3rem 2rem;
    margin-bottom: 3rem;
    backdrop-filter: blur(10px);
    color: white;
}

.steps-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
}

.steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.step-card {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    padding: 2rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.step-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    color: #667eea;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
}

.step-content h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.step-content p {
    margin-bottom: 1rem;
    opacity: 0.9;
}

/* Subscription Details */
.subscription-details {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.details-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1.5rem;
    text-align: center;
}

.details-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: #f9fafb;
    border-radius: 8px;
}

.detail-label {
    font-weight: 500;
    color: #6b7280;
}

.detail-value {
    font-weight: 600;
    color: #1f2937;
}

.status-active {
    color: #16a34a !important;
}

.billing-info {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
}

.billing-note {
    color: #6b7280;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Email Confirmation */
.email-confirmation {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(10px);
    color: white;
}

.confirmation-card {
    text-align: center;
}

.confirmation-card i {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #10b981;
}

.confirmation-card h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.confirmation-card p {
    opacity: 0.9;
    margin: 0;
}

/* Animations */
@@keyframes checkmark-fill {
    100% {
        box-shadow: inset 0px 0px 0px 120px #16a34a;
    }
}

@@keyframes checkmark-scale {
    0%, 100% {
        transform: none;
    }
    50% {
        transform: scale3d(1.1, 1.1, 1);
    }
}

@@keyframes checkmark-rotate {
    0% {
        transform: rotate(-45deg);
    }
}

@@keyframes checkmark-icon-tip {
    0% {
        width: 0;
        left: 20px;
        top: 56px;
    }
    54% {
        width: 0;
        left: 20px;
        top: 56px;
    }
    70% {
        width: 30px;
        left: 20px;
        top: 56px;
    }
    84% {
        width: 17px;
        left: 33px;
        top: 69px;
    }
    100% {
        width: 25px;
        left: 30px;
        top: 65px;
    }
}

@@media (max-width: 768px) {
    .success-title {
        font-size: 2rem;
        flex-direction: column;
        gap: 1rem;
    }
    
    .success-subtitle {
        font-size: 1.125rem;
    }
    
    .features-showcase,
    .next-steps,
    .subscription-details {
        padding: 2rem 1rem;
    }
    
    .showcase-title,
    .steps-title {
        font-size: 1.5rem;
    }
    
    .features-grid {
        grid-template-columns: 1fr;
    }
    
    .steps-grid {
        grid-template-columns: 1fr;
    }
    
    .step-card {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }
    
    .details-content {
        grid-template-columns: 1fr;
    }
}

@@media (max-width: 576px) {
    .success-container {
        padding: 1rem 0.5rem;
    }
    
    .success-checkmark {
        width: 80px;
        height: 80px;
    }
    
    .success-checkmark .check-icon {
        width: 80px;
        height: 80px;
    }
    
    .success-title {
        font-size: 1.75rem;
    }
    
    .feature-card {
        padding: 1rem;
    }
    
    .feature-icon {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }
}
</style>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Trigger confetti animation
    if (typeof confetti !== 'undefined') {
        confetti({
            particleCount: 100,
            spread: 70,
            origin: { y: 0.6 }
        });
    }
    
    // Smooth scroll to sections when clicking next steps
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth'
                });
            }
        });
    });
});
</script>
}