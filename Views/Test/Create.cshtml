@model TestPlatform2.Models.TestForCreationDto

<h2>Create New Test</h2>

<form asp-action="Create" method="post">
    <!-- Validation Summary at the top for visibility -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Test Title -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- Randomize Questions (correct checkbox implementation) -->
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="RandomizeQuestions" />
        <label class="form-check-label" asp-for="RandomizeQuestions"></label>
    </div>

    <!-- Time Limit -->
    <div class="form-group">
        <label asp-for="TimeLimit" class="control-label"></label>
        <input asp-for="TimeLimit" class="form-control" />
        <span asp-validation-for="TimeLimit" class="text-danger"></span>
    </div>

    <!-- Max Attempts -->
    <div class="form-group">
        <label asp-for="MaxAttempts" class="control-label"></label>
        <input asp-for="MaxAttempts" class="form-control" />
        <span asp-validation-for="MaxAttempts" class="text-danger"></span>
    </div>

    <!-- Multiple Choice Questions to Show -->
    <div class="form-group">
        <label asp-for="MultipleChoiceQuestionsToShow" class="control-label"></label>
        <input asp-for="MultipleChoiceQuestionsToShow" class="form-control" type="number" />
        <span asp-validation-for="MultipleChoiceQuestionsToShow" class="text-danger"></span>
    </div>

    <!-- True/False Questions to Show -->
    <div class="form-group">
        <label asp-for="TrueFalseQuestionsToShow" class="control-label"></label>
        <input asp-for="TrueFalseQuestionsToShow" class="form-control" type="number" />
        <span asp-validation-for="TrueFalseQuestionsToShow" class="text-danger"></span>
    </div>

    <!-- Short Answer Questions to Show -->
    <div class="form-group">
        <label asp-for="ShortAnswerQuestionsToShow" class="control-label"></label>
        <input asp-for="ShortAnswerQuestionsToShow" class="form-control" type="number" />
        <span asp-validation-for="ShortAnswerQuestionsToShow" class="text-danger"></span>
    </div>

    <!-- Questions to Show -->
    <div class="form-group">
        <label asp-for="QuestionsToShow" class="control-label"></label>
        <input asp-for="QuestionsToShow" class="form-control" type="number" />
        <span asp-validation-for="QuestionsToShow" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Test</button>
</form>