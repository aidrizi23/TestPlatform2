    function showFormErrors(errors) {
        // Clear previous errors
        const errorElements = document.querySelectorAll('#createQuestionModal .invalid-feedback');
        errorElements.forEach(el => el.textContent = '');
        
        const inputElements = document.querySelectorAll('#createQuestionModal .form-control');
        inputElements.forEach(el => el.classList.remove('is-invalid'));
        
        // Show new errors
        errors.forEach(error => {
            const fieldName = error.Field.toLowerCase();
            let input = null;
            
            if (fieldName.includes('text')) {
                input = document.getElementById('questionText');
            } else if (fieldName.includes('points')) {
                input = document.getElementById('questionPoints');
            } else if (fieldName.includes('expectedanswer')) {
                input = document.getElementById('expectedAnswer');
            }
            
            if (input) {
                input.classList.add('is-invalid');
                const feedback = input.parentElement.querySelector('.invalid-feedback');
                if (feedback) {
                    feedback.textContent = error.Message;
                }
            }
        });
    }

