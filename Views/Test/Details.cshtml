            <div class="row align-items-center">
                <div class="col-1">
                    <input type="checkbox" class="form-check-input edit-option-correct" data-option-index="${optionIndex}" ${isCorrect ? 'checked' : ''}>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control edit-option-text" placeholder="Option ${optionIndex + 1}" 
                           value="${value}" data-option-index="${optionIndex}">
                </div>
                <div class="col-1">
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeEditMultipleChoiceOption(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        `;
        
