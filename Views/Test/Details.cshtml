    }

    window.addEditMultipleChoiceOption = function() {
        addEditMultipleChoiceOption();
    };

    window.removeEditMultipleChoiceOption = function(button) {
        const container = document.getElementById('editOptionsContainer');
        if (container.children.length > 2) {
            button.closest('.option-item').remove();
            
            // Update indices
            Array.from(container.children).forEach((item, index) => {
                const checkbox = item.querySelector('.edit-option-correct');
                const input = item.querySelector('.edit-option-text');
                checkbox.dataset.optionIndex = index;
                input.dataset.optionIndex = index;
                input.placeholder = `Option ${index + 1}`;
            });
        } else {
            showToast('At least 2 options are required', 'warning');
        }
    };

    window.submitEditQuestionForm = async function() {
        try {
            showLoading();
            
            const questionId = document.getElementById('editQuestionId').value;
            const questionData = await getQuestionDataForEdit();
            
            if (!questionData) {
                return;
            }
            
            // Submit to appropriate endpoint
            const questionType = getCurrentEditQuestionType();
            const response = await fetch(`/Question/Edit${questionType}Ajax`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify(questionData)
            });
            
            const result = await response.json();
            
            if (result.success) {
                showToast(result.message, 'success');
                
                // Hide modal
                bootstrap.Modal.getInstance(document.getElementById('editQuestionModal')).hide();
                
                // Update question in UI
                updateQuestionInUI(result.question);
            } else {
                if (result.errors) {
                    showEditFormErrors(result.errors);
                } else {
                    showToast(result.message || 'Error updating question', 'error');
                }
            }
        } catch (error) {
            console.error('Error updating question:', error);
            showToast('Error updating question', 'error');
        } finally {
            hideLoading();
        }
    };

    function getCurrentEditQuestionType() {
        if (document.getElementById('editTrueFalseSection').style.display !== 'none') {
            return 'TrueFalse';
        } else if (document.getElementById('editMultipleChoiceSection').style.display !== 'none') {
            return 'MultipleChoice';
        } else if (document.getElementById('editShortAnswerSection').style.display !== 'none') {
            return 'ShortAnswer';
        }
        return null;
    }

    function getQuestionDataForEdit() {
        const formData = {
            Id: document.getElementById('editQuestionId').value,
            Text: document.getElementById('editQuestionText').value.trim(),
            Points: parseInt(document.getElementById('editQuestionPoints').value) || 1
        };
        
        const questionType = getCurrentEditQuestionType();
        
        switch (questionType) {
            case 'TrueFalse':
                formData.CorrectAnswer = document.getElementById('editTrueFalseCorrect').checked;
                break;
                
            case 'MultipleChoice':
                const options = Array.from(document.querySelectorAll('.edit-option-text'))
                    .map(input => input.value.trim())
                    .filter(value => value);
                
                const correctAnswers = Array.from(document.querySelectorAll('.edit-option-correct:checked'))
                    .map(checkbox => {
                        const index = parseInt(checkbox.dataset.optionIndex);
                        return options[index];
                    })
                    .filter(value => value);
                
                formData.Options = options;
                formData.CorrectAnswers = correctAnswers;
                formData.AllowMultipleSelections = document.getElementById('editAllowMultipleSelections').checked;
                break;
                
            case 'ShortAnswer':
                formData.ExpectedAnswer = document.getElementById('editExpectedAnswer').value.trim();
                formData.CaseSensitive = document.getElementById('editCaseSensitive').checked;
                break;
        }
        
        return formData;
    }

    function showEditFormErrors(errors) {
        // Clear previous errors
        const errorElements = document.querySelectorAll('#editQuestionModal .invalid-feedback');
        errorElements.forEach(el => el.textContent = '');
        
        const inputElements = document.querySelectorAll('#editQuestionModal .form-control');
        inputElements.forEach(el => el.classList.remove('is-invalid'));
        
        // Show new errors
        errors.forEach(error => {
            const fieldName = error.Field.toLowerCase();
            let input = null;
            
            if (fieldName.includes('text')) {
                input = document.getElementById('editQuestionText');
            } else if (fieldName.includes('points')) {
                input = document.getElementById('editQuestionPoints');
            } else if (fieldName.includes('expectedanswer')) {
                input = document.getElementById('editExpectedAnswer');
            }
            
            if (input) {
                input.classList.add('is-invalid');
                const feedback = input.nextElementSibling?.nextElementSibling;
                if (feedback && feedback.classList.contains('invalid-feedback')) {
                    feedback.textContent = error.Message;
                }
            }
        });
    }

    function updateQuestionInUI(questionData) {
        const questionElement = document.querySelector(`[data-question-id="${questionData.id}"]`);
        if (questionElement) {
            // Update question text
            const textElement = questionElement.querySelector('.question-text');
            if (textElement) {
                textElement.textContent = questionData.text;
            }
            
            // Update points
            const pointsElement = questionElement.querySelector('.question-points');
            if (pointsElement) {
                pointsElement.innerHTML = `<i class="fas fa-star me-1"></i>${questionData.points} pts`;
            }
        }
    }

    window.confirmDeleteQuestion = async function() {
        showLoading();
        try {
            const response = await fetch('/Question/DeleteAjax', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ Id: currentQuestionId })
            });

            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    showToast('Question deleted successfully', 'success');
                    
                    // Hide the modal
                    bootstrap.Modal.getInstance(document.getElementById('deleteQuestionModal')).hide();
                    
                    // Remove the question from the UI
                    const questionElement = document.querySelector(`[data-question-id="${currentQuestionId}"]`);
                    if (questionElement) {
                        questionElement.remove();
                    }
                    
                    // Update question count
                    const questionCount = document.querySelectorAll('.question-item').length;
                    const questionsTabCount = document.getElementById('questionsTabCount');
                    if (questionsTabCount) {
                        questionsTabCount.textContent = questionCount;
                    }
                    
                    // Update total points if available
                    const pointsElements = document.querySelectorAll('.question-points');
                    let totalPoints = 0;
                    pointsElements.forEach(el => {
                        totalPoints += parseInt(el.textContent) || 0;
                    });
                    const totalPointsElement = document.getElementById('totalPoints');
                    if (totalPointsElement) {
                        totalPointsElement.textContent = totalPoints;
                    }
                } else {
                    showToast(result.message || 'Failed to delete question', 'error');
                }
            } else {
                showToast('Failed to delete question', 'error');
            }
        } catch (error) {
            console.error('Error deleting question:', error);
            showToast('An error occurred while deleting the question', 'error');
        } finally {
            hideLoading();
            bootstrap.Modal.getInstance(document.getElementById('deleteQuestionModal')).hide();
        }
    };

    // Email invitation functionality
    let emailFieldCount = 0;

    window.generateEmailFields = function() {
        const emailCount = parseInt(document.getElementById('emailCount').value);
        if (!emailCount || emailCount < 1 || emailCount > 50) {
            showToast('Please enter a valid number between 1 and 50', 'warning');
            return;
        }

        const emailFieldsContainer = document.getElementById('emailFieldsContainer');
        const emailFields = document.getElementById('emailFields');
        
        // Clear existing fields
        emailFields.innerHTML = '';
        emailFieldCount = 0;

        // Generate fields
        for (let i = 0; i < emailCount; i++) {
            addEmailField();
        }

        emailFieldsContainer.style.display = 'block';
        showToast(`Generated ${emailCount} email fields`, 'success');
    };

    window.addSingleField = function() {
        addEmailField();
        showToast('Email field added', 'success');
    };

    function addEmailField() {
        emailFieldCount++;
        const emailFields = document.getElementById('emailFields');
        
        const fieldHtml = `
            <div class="email-field-group" id="emailField${emailFieldCount}">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input type="email" class="form-control email-input" 
                           placeholder="student${emailFieldCount}\@@example.com"
                           data-field-id="${emailFieldCount}" required>
                    <button type="button" class="btn btn-outline-danger" 
                            onclick="removeEmailField(${emailFieldCount})" 
                            title="Remove this field">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        `;
        
        emailFields.insertAdjacentHTML('beforeend', fieldHtml);
    }

    window.removeEmailField = function(fieldId) {
        const field = document.getElementById(`emailField${fieldId}`);
        if (field) {
            field.remove();
            
            // Check if any fields remain
            const remainingFields = document.querySelectorAll('.email-field-group');
            if (remainingFields.length === 0) {
                document.getElementById('emailFieldsContainer').style.display = 'none';
            }
            
            showToast('Email field removed', 'info');
        }
    };

    window.sendInvites = async function(testId) {
        const emailInputs = document.querySelectorAll('.email-input');
        const emails = [];
        
        // Collect all email addresses
        emailInputs.forEach(input => {
            if (input.value.trim()) {
                emails.push(input.value.trim());
            }
        });

        if (emails.length === 0) {
            showToast('Please enter at least one email address', 'warning');
            return;
        }

        // Validate email addresses
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        const invalidEmails = emails.filter(email => !emailRegex.test(email));
        if (invalidEmails.length > 0) {
            showToast(`Invalid email addresses: ${invalidEmails.join(', ')}`, 'error');
            return;
        }

        const sendButton = document.querySelector('[onclick*="sendInvites"]');
        const originalText = sendButton.innerHTML;
        
        showLoading();
        sendButton.disabled = true;
        sendButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending Invitations...';

        try {
            const response = await fetch('/TestInvite/SendInvites', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    TestId: testId,
                    EmailAddresses: emails.join(', '),
                    CustomMessage: '' // You can add a message field if needed
                })
            });

            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    showToast(`Successfully sent ${result.sentCount || emails.length} invitations`, 'success');
                    
                    // Clear all email fields
                    document.getElementById('emailFields').innerHTML = '';
                    document.getElementById('emailFieldsContainer').style.display = 'none';
                    document.getElementById('emailCount').value = '';
                    emailFieldCount = 0;
                    
                    // Update invites count if elements exist
                    const invitesCount = document.querySelector('[data-invite-count]');
                    if (invitesCount && result.totalInvites !== undefined) {
                        invitesCount.textContent = result.totalInvites;
                    }
                } else {
                    showToast(result.message || 'Failed to send invitations', 'error');
                }
            } else {
                const errorText = await response.text();
                showToast('Failed to send invitations: ' + errorText, 'error');
            }
        } catch (error) {
            console.error('Error sending invitations:', error);
            showToast('An error occurred while sending invitations', 'error');
        } finally {
            hideLoading();
            sendButton.disabled = false;
            sendButton.innerHTML = originalText;
        }
    };

