                if (checkbox) {
                    checkbox.dataset.testId = newTestId;
                    checkbox.checked = false;
                }

                // Update lock button
                const lockButton = newCard.querySelector('.lock-test-btn');
                if (lockButton) {
                    lockButton.dataset.testId = newTestId;
