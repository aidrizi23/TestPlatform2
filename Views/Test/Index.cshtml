                        <a asp-action="Details" asp-route-id="@test.Id" class="btn btn-primary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </a>
                        <a asp-action="AllAttempts" asp-route-testId="@test.Id" class="btn btn-outline-primary">
                            <i class="fas fa-chart-bar"></i>
                            Results
                        </a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>

