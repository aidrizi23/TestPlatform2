        padding: 0.8rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .header-actions .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        background: rgba(255,255,255,0.2);
    }

    /* Enhanced Metrics Grid */
    .metrics-grid {
        display: grid;
